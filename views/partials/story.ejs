<div class="relative group cursor-pointer">
    <div class="w-24 h-36 rounded-2xl overflow-hidden shadow-glass border border-surface-200/50">
        <!-- Story Image with Gradient Overlay -->
        <div class="relative h-full">
            <img src="<%= story.image %>" alt="<%= story.user.name %>'s story" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700">
            <div class="absolute inset-0 bg-gradient-to-b from-surface-900/10 via-transparent to-surface-900/80"></div>

            <!-- Glow Effect on Hover -->
            <div class="absolute inset-0 opacity-0 group-hover:opacity-100 bg-gradient-to-t from-primary-500/20 to-transparent transition-opacity duration-300"></div>
        </div>
    </div>

    <!-- User Avatar with Glow Effect -->
    <div class="absolute top-2 left-2">
        <div class="relative">
            <div class="absolute inset-0 rounded-full bg-primary-500 blur-sm opacity-0 group-hover:opacity-40 transition-opacity duration-300"></div>
            <div class="relative p-0.5 rounded-full bg-gradient-to-r from-primary-500 to-accent-500">
                <div class="p-0.5 rounded-full bg-white">
                    <img src="<%= story.user.avatar %>" alt="<%= story.user.name %>" class="w-6 h-6 rounded-full object-cover">
                </div>
            </div>
        </div>
    </div>

    <!-- Username with Better Readability -->
    <p class="absolute bottom-2 left-2 right-2 text-white text-xs font-medium truncate drop-shadow-md"><%= story.user.name %></p>

    <!-- View Indicator with Animation -->
    <% if (!story.viewed) { %>
        <div class="absolute -top-1 -right-1">
            <div class="relative">
                <div class="absolute inset-0 rounded-full bg-primary-500 blur-sm animate-pulse"></div>
                <div class="relative w-3 h-3 bg-gradient-to-r from-primary-500 to-accent-500 rounded-full border border-white"></div>
            </div>
        </div>
    <% } %>
</div>
