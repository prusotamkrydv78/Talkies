<div class="bg-white overflow-hidden h-[90vh] px-2 w-full">
  <div class="flex h-full">
    <!-- Conversations List -->
    <div class="w-full md:w-96 border-r border-dark-100 flex flex-col conversations-list-container">
      <!-- Search Bar -->
      <div class="p-2 border-b border-dark-100">
        <div class="relative">
          <input type="text" placeholder="Search messages..." class="w-full bg-dark-50 border-none rounded-xl py-2 pl-11 pr-4 focus:ring-2 focus:ring-primary-500 focus:bg-white transition-all shadow-sm">
          <div class="absolute left-4 top-3.5 text-dark-400">
            <i class="fas fa-search"></i>
          </div>
        </div>
      </div>

      <!-- Tabs -->
      <div class="flex p-2 border-b border-dark-100 bg-dark-50">
        <button class="primary-tab flex-1 py-2 px-2 font-medium text-white bg-gradient-to-r from-primary-500 to-secondary-500 rounded-xl shadow-sm transition-all">
          <div class="flex items-center justify-center">
            <i class="fas fa-inbox mr-1"></i>
            <span>Chats</span>
          </div>
        </button>
        <button class="followed-tab flex-1 py-2 px-2 font-medium text-dark-600 hover:bg-white rounded-xl transition-all ml-1">
          <div class="flex items-center justify-center">
            <i class="fas fa-user-friends mr-1"></i>
            <span>Following</span>
          </div>
        </button>
        <button class="requests-tab flex-1 py-2 px-2 font-medium text-dark-600 hover:bg-white rounded-xl transition-all ml-1">
          <div class="flex items-center justify-center">
            <i class="fas fa-user-plus mr-1"></i>
            <span>Requests</span>
            <span class="ml-1 bg-secondary-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">3</span>
          </div>
        </button>
      </div>

      <!-- Conversations -->
      <div class="flex-1 overflow-y-auto custom-scrollbar conversations-list">
        <!-- Conversations will be loaded dynamically -->
        <div class="p-4 text-center">
          <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-primary-500 mx-auto mb-4"></div>
          <p class="text-dark-500">Loading conversations...</p>
        </div>
      </div>

      <!-- New Message Button -->
      <div class="p-2 border-t border-dark-100">
        <button class="new-message-button btn bg-gradient-to-r from-primary-500 to-secondary-500 text-white w-full py-3 rounded-xl shadow-sm hover:shadow-md transition-all">
          <i class="fas fa-pen-to-square mr-2"></i>
          New Message
        </button>
      </div>
    </div>

    <!-- Chat Area -->
    <div class="hidden md:flex flex-col flex-1 h-full chat-area">
      <!-- Chat Header -->
      <div class="p-2 border-b border-dark-100 flex justify-between items-center bg-white shadow-sm chat-header">
        <!-- Chat header will be loaded dynamically -->
        <div class="flex items-center space-x-4">
          <button class="md:hidden back-button w-10 h-10 rounded-xl bg-dark-50 flex items-center justify-center text-dark-500 hover:bg-dark-100 transition-all shadow-sm hover:shadow mr-2">
            <i class="fas fa-arrow-left"></i>
          </button>
          <div class="animate-pulse rounded-full h-12 w-12 bg-dark-100"></div>
          <div>
            <div class="animate-pulse h-5 w-32 bg-dark-100 rounded mb-2"></div>
            <div class="animate-pulse h-3 w-16 bg-dark-100 rounded"></div>
          </div>
        </div>

        <div class="flex items-center space-x-3">
          <div class="animate-pulse rounded-xl h-10 w-10 bg-dark-100"></div>
          <div class="animate-pulse rounded-xl h-10 w-10 bg-dark-100"></div>
          <div class="animate-pulse rounded-xl h-10 w-10 bg-dark-100"></div>
        </div>
      </div>

      <!-- Messages -->
      <div class="flex-1 overflow-y-auto p-6 space-y-6 bg-dark-50 custom-scrollbar messages-container">
        <!-- Messages will be loaded dynamically -->
        <div class="flex items-center justify-center h-full">
          <div class="text-center p-8">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-primary-500 mx-auto mb-6"></div>
            <p class="text-dark-500">Loading messages...</p>
          </div>
        </div>
      </div>

      <!-- Message Input -->
      <div class="p-4 border-t border-dark-100 bg-white">
        <div class="flex items-center space-x-3">
          <button class="w-12 h-12 rounded-xl bg-dark-50 flex items-center justify-center text-dark-500 hover:bg-dark-100 transition-all shadow-sm hover:shadow">
            <i class="fas fa-plus"></i>
          </button>
          <div class="flex-1 relative">
            <input type="text" placeholder="Type a message..." class="w-full bg-dark-50 border-none rounded-xl py-3.5 pl-5 pr-20 focus:ring-2 focus:ring-primary-500 focus:bg-white transition-all shadow-sm">
            <div class="absolute right-4 top-3 flex space-x-3">
              <button class="text-dark-400 hover:text-dark-600 transition-colors">
                <i class="fas fa-smile"></i>
              </button>
              <button class="text-dark-400 hover:text-dark-600 transition-colors">
                <i class="fas fa-paperclip"></i>
              </button>
            </div>
          </div>
          <button class="send-button w-12 h-12 rounded-xl bg-gradient-to-r from-primary-500 to-secondary-500 flex items-center justify-center text-white hover:shadow-md transition-all shadow-sm">
            <i class="fas fa-paper-plane"></i>
          </button>
        </div>
      </div>
    </div>

    <!-- Empty State (for mobile) -->
    <div class="flex-1 flex items-center justify-center bg-dark-50 md:hidden mobile-empty-state">
      <div class="text-center p-8 bg-white rounded-2xl shadow-sm max-w-xs mx-auto">
        <div class="w-20 h-20 rounded-full bg-gradient-to-r from-primary-500 to-secondary-500 flex items-center justify-center text-white mx-auto mb-6 shadow-md">
          <i class="fas fa-comments text-3xl"></i>
        </div>
        <h3 class="font-bold text-dark-900 text-xl mb-3">Your Messages</h3>
        <p class="text-dark-500 mb-6">Select a conversation to start chatting</p>
        <button class="new-message-button btn bg-gradient-to-r from-primary-500 to-secondary-500 text-white py-3 px-6 rounded-xl shadow-sm hover:shadow-md transition-all w-full">
          <i class="fas fa-pen-to-square mr-2"></i>
          New Message
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Include the messages page script -->
<script src="/js/messagesPage.js"></script>
