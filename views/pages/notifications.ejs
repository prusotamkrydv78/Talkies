<div class="max-w-3xl mx-auto">
  <!-- Notifications Header -->
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold bg-gradient-to-r from-primary-500 to-secondary-500 text-transparent bg-clip-text">Notifications</h1>

    <div class="flex space-x-3 ">
      <button id="markAllReadBtn" class="btn px-2 bg-white border border-dark-100 text-dark-700 hover:bg-dark-50 rounded-xl shadow-sm hover:shadow transition-all">
        <i class="fas fa-check-double mr-2 text-primary-500"></i>
        Mark all as read
      </button>
      <button class="w-10 h-10 rounded-xl bg-white border border-dark-100 text-dark-700 hover:bg-dark-50 flex items-center justify-center shadow-sm hover:shadow transition-all">
        <i class="fas fa-cog"></i>
      </button>
    </div>
  </div>

  <!-- Notification Tabs -->
  <div class="flex mb-8 bg-white rounded-xl shadow-sm p-1 overflow-x-auto custom-scrollbar">
    <button data-filter="all" class="notification-tab flex-1 px-4 py-3 font-medium text-white bg-gradient-to-r from-primary-500 to-secondary-500 rounded-lg transition-all active-tab">
      All
    </button>
    <button data-filter="mention" class="notification-tab flex-1 px-4 py-3 font-medium text-dark-600 hover:bg-dark-50 rounded-lg transition-all">
      Mentions
    </button>
    <button data-filter="comment" class="notification-tab flex-1 px-4 py-3 font-medium text-dark-600 hover:bg-dark-50 rounded-lg transition-all">
      Comments
    </button>
    <button data-filter="like" class="notification-tab flex-1 px-4 py-3 font-medium text-dark-600 hover:bg-dark-50 rounded-lg transition-all">
      Likes
    </button>
    <button data-filter="follow" class="notification-tab flex-1 px-4 py-3 font-medium text-dark-600 hover:bg-dark-50 rounded-lg transition-all">
      Follows
    </button>
  </div>

  <!-- Notifications Container -->
  <div class="notifications-container space-y-10">
    <!-- Notifications will be loaded dynamically -->
    <div class="text-center p-8">
      <i class="fas fa-spinner fa-spin text-3xl text-primary-500"></i>
      <p class="mt-4 text-dark-700">Loading notifications...</p>
    </div>
  </div>

  <!-- Include the notifications page script -->
  <script src="/js/notificationsPage.js"></script>
</div>
