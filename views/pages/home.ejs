<div class="flex flex-col md:flex-row md:space-x-6">
  <!-- Left Sidebar -->
  <div class="hidden md:block md:w-80 lg:w-[14rem] space-y-6">
    <!-- User Stats Card -->
    <div class="card">
      <div class="flex items-center space-x-3 mb-5">
        <img src="https://ui-avatars.com/api/?name=John+Doe&background=0D8ABC&color=fff" alt="John Doe" class="w-14 h-14 rounded-full border-2 border-primary-100">
        <div>
          <h3 class="font-semibold text-dark-900">John Doe</h3>
          <p class="text-dark-500 text-sm">@johndoe</p>
        </div>
      </div>

      <div class="grid grid-cols-3 gap-2 mb-5">
        <div class="bg-dark-50 rounded-xl p-3 text-center">
          <p class="text-dark-500 text-xs">Posts</p>
          <p class="font-bold text-dark-900 text-lg">24</p>
        </div>
        <div class="bg-dark-50 rounded-xl p-3 text-center">
          <p class="text-dark-500 text-xs">Followers</p>
          <p class="font-bold text-dark-900 text-lg">2.5K</p>
        </div>
        <div class="bg-dark-50 rounded-xl p-3 text-center">
          <p class="text-dark-500 text-xs">Following</p>
          <p class="font-bold text-dark-900 text-lg">348</p>
        </div>
      </div>

      <div class="flex space-x-2">
        <a href="/profile" class="btn-secondary flex-1">View Profile</a>
        <a href="/settings" class="btn-outline flex-1">Edit Profile</a>
      </div>
    </div>

    <!-- Trending Topics -->
    <div class="card">
      <h3 class="font-bold text-dark-800 mb-4">Trending Topics</h3>
      <div class="space-y-4">
        <a href="/hashtag/technology" class="flex items-center justify-between hover:bg-dark-50 p-2 rounded-lg transition-colors">
          <div>
            <p class="font-medium text-dark-800">#Technology</p>
            <p class="text-dark-500 text-xs">24.5K posts</p>
          </div>
          <i class="fas fa-chevron-right text-dark-300"></i>
        </a>
        <a href="/hashtag/design" class="flex items-center justify-between hover:bg-dark-50 p-2 rounded-lg transition-colors">
          <div>
            <p class="font-medium text-dark-800">#Design</p>
            <p class="text-dark-500 text-xs">18.2K posts</p>
          </div>
          <i class="fas fa-chevron-right text-dark-300"></i>
        </a>
        <a href="/hashtag/photography" class="flex items-center justify-between hover:bg-dark-50 p-2 rounded-lg transition-colors">
          <div>
            <p class="font-medium text-dark-800">#Photography</p>
            <p class="text-dark-500 text-xs">12.7K posts</p>
          </div>
          <i class="fas fa-chevron-right text-dark-300"></i>
        </a>
        <a href="/hashtag/travel" class="flex items-center justify-between hover:bg-dark-50 p-2 rounded-lg transition-colors">
          <div>
            <p class="font-medium text-dark-800">#Travel</p>
            <p class="text-dark-500 text-xs">10.3K posts</p>
          </div>
          <i class="fas fa-chevron-right text-dark-300"></i>
        </a>
        <a href="/hashtag/food" class="flex items-center justify-between hover:bg-dark-50 p-2 rounded-lg transition-colors">
          <div>
            <p class="font-medium text-dark-800">#Food</p>
            <p class="text-dark-500 text-xs">9.8K posts</p>
          </div>
