    </div>
  </div>

  <!-- Main Content -->
  <div class="flex-1 max-w-3xl">
    <!-- Create Post -->
    <div class="bg-white rounded-2xl shadow-sm mb-8">
      <div class="p-4 flex items-center space-x-4">
        <img src="https://ui-avatars.com/api/?name=John+Doe&background=0D8ABC&color=fff" alt="John Doe" class="w-10 h-10 rounded-full">
        <button id="openPostModal" class="block w-full bg-dark-50 text-dark-500 rounded-full py-2.5 px-4 hover:bg-dark-100 transition-colors text-left">
          What's on your mind?
        </button>
      </div>
      <div class="px-4 pb-4 flex space-x-2">
        <button id="openPhotoUpload" class="flex-1 flex items-center justify-center space-x-2 py-2 hover:bg-dark-50 rounded-xl transition-colors text-dark-600">
          <i class="fas fa-image text-green-500"></i>
          <span>Photo</span>
        </button>
        <button id="openVideoUpload" class="flex-1 flex items-center justify-center space-x-2 py-2 hover:bg-dark-50 rounded-xl transition-colors text-dark-600">
          <i class="fas fa-video text-red-500"></i>
          <span>Video</span>
        </button>
        <button id="openFeelingSelector" class="flex-1 flex items-center justify-center space-x-2 py-2 hover:bg-dark-50 rounded-xl transition-colors text-dark-600">
          <i class="fas fa-smile text-yellow-500"></i>
          <span>Feeling</span>
        </button>
      </div>
    </div>

    <!-- Post Creation Modal -->
    <div id="postCreationModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center hidden">
      <div class="bg-white rounded-2xl shadow-lg w-full max-w-2xl max-h-[90vh] overflow-y-auto">
        <!-- Modal Header -->
        <div class="p-4 border-b border-dark-100 flex justify-between items-center sticky top-0 bg-white z-10">
          <h2 class="text-xl font-semibold text-dark-900">Create Post</h2>
          <button id="closePostModal" class="text-dark-500 hover:text-dark-700 transition-colors">
            <i class="fas fa-times text-xl"></i>
          </button>
        </div>

        <!-- Modal Content -->
        <div class="p-6">
          <!-- User Info -->
          <div class="flex items-center space-x-3 mb-6">
            <div id="userAvatar" class="w-12 h-12 rounded-full bg-primary-500 flex items-center justify-center text-white font-bold">
              JD
            </div>
            <div>
              <h3 id="userName" class="font-semibold text-dark-900">John Doe</h3>
              <div class="flex items-center text-dark-500 text-sm">
                <i class="fas fa-globe-americas mr-1.5"></i>
                <select id="postPrivacy" class="bg-transparent border-none focus:ring-0 p-0 pr-6 text-dark-500">
                  <option value="Public">Public</option>
                  <option value="Friends">Friends Only</option>
                  <option value="Private">Private</option>
                </select>
              </div>
            </div>
          </div>

          <!-- Post Content -->
          <div class="mb-6">
            <textarea
              id="postContent"
              placeholder="What's on your mind?"
              class="w-full border-none bg-dark-50 rounded-xl p-4 min-h-[120px] focus:ring-2 focus:ring-primary-500 focus:bg-white transition-all resize-none"
            ></textarea>
          </div>

          <!-- Upload Area -->
          <div id="uploadArea" class="border-2 border-dashed border-dark-200 rounded-xl p-8 mb-6 text-center">
            <div class="mb-4">
              <i class="fas fa-cloud-upload-alt text-4xl text-dark-400"></i>
            </div>
            <h4 class="font-semibold text-dark-800 mb-2">Drag and drop media here</h4>
            <p class="text-dark-500 text-sm mb-4">Support for images and videos</p>
            <button id="browseFiles" class="bg-primary-500 text-white px-6 py-2.5 rounded-full hover:bg-primary-600 transition-colors shadow-sm">
              Browse Files
            </button>
          </div>

          <!-- Media Preview (Hidden by default, shown when media is added) -->
          <div id="mediaPreview" class="hidden mb-6">
            <div class="grid grid-cols-2 md:grid-cols-3 gap-4" id="previewGrid">
              <!-- Preview items will be added dynamically -->
            </div>
          </div>

          <!-- Post Options -->
          <div class="border-t border-dark-100 pt-6">
            <h3 class="font-semibold mb-4 flex items-center">
              <i class="fas fa-plus-circle text-primary-500 mr-2"></i>
              Add to your post
            </h3>

            <div class="flex flex-wrap gap-4 mb-6">
              <button id="addPhotoVideo" class="flex items-center text-dark-700 hover:text-primary-500 transition-colors">
                <i class="fas fa-image mr-2 text-green-500"></i>
                <span>Photo/Video</span>
              </button>

              <button id="tagPeople" class="flex items-center text-dark-700 hover:text-primary-500 transition-colors">
                <i class="fas fa-user-tag mr-2 text-blue-500"></i>
                <span>Tag People</span>
              </button>

              <button id="addFeeling" class="flex items-center text-dark-700 hover:text-primary-500 transition-colors">
                <i class="fas fa-smile mr-2 text-yellow-500"></i>
                <span>Feeling/Activity</span>
              </button>

              <button id="addLocation" class="flex items-center text-dark-700 hover:text-primary-500 transition-colors">
                <i class="fas fa-map-marker-alt mr-2 text-red-500"></i>
                <span>Location</span>
              </button>

              <button id="addTags" class="flex items-center text-dark-700 hover:text-primary-500 transition-colors">
                <i class="fas fa-hashtag mr-2 text-purple-500"></i>
                <span>Tags</span>
              </button>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-end">
              <button id="publishPost" class="px-6 py-2.5 bg-primary-500 text-white rounded-full hover:bg-primary-600 transition-colors shadow-sm">
                <i class="fas fa-paper-plane mr-2"></i>
                Post Now
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Stories -->
    <div class="mb-8">
      <div class="flex justify-between items-center mb-5">
        <h3 class="font-semibold text-dark-900 flex items-center">
          <div class="w-10 h-10 rounded-full bg-gradient-to-r from-primary-500 to-secondary-500 flex items-center justify-center text-white mr-3">
            <i class="fas fa-book-open"></i>
          </div>
          <span class="text-lg">Stories</span>
        </h3>
        <a href="/stories" class="text-primary-500 text-sm font-medium hover:text-primary-600 transition-colors flex items-center">
          <span>View All</span>
          <i class="fas fa-chevron-right ml-1 text-xs"></i>
        </a>
      </div>

      <div class="flex overflow-x-auto pb-4 pt-2 px-2 -mx-2 custom-scrollbar cursor-grab stories-container">
        <!-- Add Story -->
        <a href="/create-story" class="flex-shrink-0 w-[180px] md:w-[220px] relative group cursor-pointer">
          <div class="aspect-[3/4] w-full rounded-2xl bg-dark-50 overflow-hidden flex flex-col items-center justify-center shadow-md h-48 md:h-64">
            <div class="w-14 h-14 rounded-full bg-primary-100 flex items-center justify-center text-primary-500 mb-3">
              <i class="fas fa-plus text-xl"></i>
            </div>
            <span class="text-sm font-medium text-dark-700">Add Story</span>
          </div>
          <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity rounded-2xl"></div>
        </a>
        <!-- Stories will be loaded dynamically -->
      </div>
    </div>

    <!-- Posts Feed -->
    <div class="space-y-8 posts-container">
      <h3 class="font-semibold text-dark-900 flex items-center mb-5">
        <div class="w-10 h-10 rounded-full bg-gradient-to-r from-primary-500 to-secondary-500 flex items-center justify-center text-white mr-3">
          <i class="fas fa-stream"></i>
        </div>
        <span class="text-lg">Your Feed</span>
      </h3>

      <!-- Posts will be loaded dynamically -->
    </div>
  </div>

  <!-- Right Sidebar -->
  <div class="hidden lg:block lg:w-[14rem] space-y-6">
    <!-- Suggestions -->
    <div class="card suggestions-container">
      <!-- Suggestions will be loaded dynamically -->
    </div>

    <!-- Events -->
    <div class="card">
      <div class="flex justify-between items-center mb-4">
