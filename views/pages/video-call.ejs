

<div class="h-[calc(100vh-4rem)] bg-dark-900 flex flex-col">
    <!-- Video Call Area -->
    <div class="flex-1 flex flex-col md:flex-row p-4 relative">
        <!-- Main Video (Caller) -->
        <div class="flex-1 rounded-xl overflow-hidden bg-dark-800 relative">
            <img src="https://source.unsplash.com/random/1200x800?person" alt="Video call" class="w-full h-full object-cover">

            <!-- Caller Info -->
            <div class="absolute bottom-4 left-4 flex items-center space-x-3 bg-black/50 rounded-lg px-3 py-2">
                <img src="<%= caller.avatar %>" alt="<%= caller.name %>" class="w-8 h-8 rounded-full object-cover border-2 border-primary-300">
                <div>
                    <h4 class="font-medium text-white"><%= caller.name %></h4>
                    <p class="text-xs text-gray-300">00:05:32</p>
                </div>
            </div>

            <!-- Self View -->
            <div class="absolute bottom-4 right-4 w-48 h-32 rounded-xl overflow-hidden border-2 border-white shadow-lg">
                <img src="<%= user.avatar %>" alt="<%= user.name %>" class="w-full h-full object-cover">
            </div>
        </div>
    </div>

    <!-- Call Controls -->
    <div class="bg-dark-800 p-4 flex items-center justify-center space-x-4">
        <button class="bg-dark-700 hover:bg-dark-600 text-white p-4 rounded-full">
            <i class="fas fa-microphone-slash"></i>
        </button>
        <button class="bg-dark-700 hover:bg-dark-600 text-white p-4 rounded-full">
            <i class="fas fa-video"></i>
        </button>
        <button class="bg-dark-700 hover:bg-dark-600 text-white p-4 rounded-full">
            <i class="fas fa-desktop"></i>
        </button>
        <button class="bg-dark-700 hover:bg-dark-600 text-white p-4 rounded-full">
            <i class="fas fa-comment-alt"></i>
        </button>
        <button class="bg-dark-700 hover:bg-dark-600 text-white p-4 rounded-full">
            <i class="fas fa-users"></i>
        </button>
        <button class="bg-red-600 hover:bg-red-700 text-white p-4 rounded-full">
            <i class="fas fa-phone-slash"></i>
        </button>
    </div>

    <!-- Chat Sidebar (Hidden by default) -->
    <div class="hidden absolute right-0 top-0 bottom-0 w-80 bg-dark-800 border-l border-dark-700 flex flex-col">
        <div class="p-4 border-b border-dark-700 flex items-center justify-between">
            <h3 class="font-semibold text-white">Chat</h3>
            <button class="text-gray-400 hover:text-white">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <div class="flex-1 overflow-y-auto p-4 space-y-4">
            <div class="flex items-start space-x-3">
                <img src="<%= caller.avatar %>" alt="<%= caller.name %>" class="w-8 h-8 rounded-full object-cover border-2 border-primary-300">
                <div>
                    <div class="flex items-center space-x-2">
                        <h4 class="font-medium text-white"><%= caller.name %></h4>
                        <span class="text-xs text-gray-400">2:45 PM</span>
                    </div>
                    <div class="bg-dark-700 rounded-xl rounded-tl-none px-3 py-2 mt-1">
                        <p class="text-gray-200">Can you hear me clearly?</p>
                    </div>
                </div>
            </div>

            <div class="flex items-start space-x-3 justify-end">
                <div class="text-right">
                    <div class="flex items-center justify-end space-x-2">
                        <span class="text-xs text-gray-400">2:46 PM</span>
                        <h4 class="font-medium text-white">You</h4>
                    </div>
                    <div class="bg-primary-600 rounded-xl rounded-tr-none px-3 py-2 mt-1">
                        <p class="text-white">Yes, the audio is perfect!</p>
                    </div>
                </div>
                <img src="<%= user.avatar %>" alt="<%= user.name %>" class="w-8 h-8 rounded-full object-cover border-2 border-primary-300">
            </div>
        </div>

        <div class="p-4 border-t border-dark-700">
            <div class="flex items-center space-x-2">
                <input type="text" class="flex-1 bg-dark-700 border border-dark-600 rounded-full px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-primary-500" placeholder="Type a message...">
                <button class="text-white bg-primary-500 hover:bg-primary-600 p-2 rounded-full">
                    <i class="fas fa-paper-plane"></i>
                </button>
            </div>
        </div>
    </div>
</div>
